generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  UserID Int @id @default(autoincrement())
  Username String @unique
  Email String @unique
  Namalengkap String
  Password String
  Alamat String
  Role Role @default(pengguna)
  Peminjaman Peminjaman[]
  Ulasan Ulasan[]
  Koleksi Koleksi[]
}

enum Role {
  pengguna
  petugas
  admin
}

model Buku{
  BookID Int @id @default(autoincrement())
  Judul String
  Tahunterbit String
  Penulis String
  Jumlahhlmn Int
  Penerbit String
  Deskripsi String ?
  Gambar String ?
  Peminjaman Peminjaman[]
  Ulasan Ulasan[]
  Kategoribukurelasi Kategoribukurelasi[]
  Koleksi Koleksi[]
}

model Peminjaman{
  PinjamID Int @id @default(autoincrement())
  User User @relation(fields: [UserID],references: [UserID], onDelete: Cascade)
  UserID Int
  Buku Buku @relation(fields: [BookID],references: [BookID], onDelete: Cascade)
  BookID Int
  TglPeminjaman DateTime
  TglPengembalian DateTime
  Status Status @default(dipinjam)
}

enum Status {
  dipinjam
  tersedia
  hilang
}

model Ulasan{
  UlasanID Int @id @default(autoincrement())
  User User @relation(fields: [UserID],references: [UserID],onDelete: Cascade)
  UserID Int
  Buku Buku @relation(fields: [BookID],references: [BookID],onDelete: Cascade)
  BookID Int
  Tglreview DateTime
  Ulasan String
  Rating Int
}

model Kategoribuku{
  KategoriID Int @id @default(autoincrement())
  NamaKategori String
  Kategoribukurelasi Kategoribukurelasi[]
}

model Kategoribukurelasi{
  KategorirelasiID Int @id @default(autoincrement())
  Buku Buku @relation(fields: [BookID],references: [BookID],onDelete: Cascade)
  BookID Int
  Kategoribuku Kategoribuku @relation(fields: [KategoriID],references: [KategoriID],onDelete: Cascade)
  KategoriID Int
  Genre Genre @relation(fields: [GenreID],references: [GenreID],onDelete: Cascade)
  GenreID Int
}

model Koleksi{
  KoleksiID Int @id @default(autoincrement())
  User User @relation(fields: [UserID],references: [UserID],onDelete: Cascade)
  UserID Int
  Buku Buku @relation(fields: [BookID],references: [BookID],onDelete: Cascade)
  BookID Int
}

model Genre{
  GenreID Int @id @default(autoincrement())
  Kategoribukurelasi Kategoribukurelasi[]
  Namagenre String
}
